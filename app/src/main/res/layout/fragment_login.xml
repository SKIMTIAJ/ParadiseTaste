<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.initial_fragments.LoginFragment">

    <EditText
        android:id="@+id/mobileVerification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:inputType="number"
        android:hint="Mobile Number"
        android:paddingLeft="@dimen/_15sdp"
        android:background="@drawable/edit_background"
        android:layout_marginLeft="@dimen/_36sdp"
        android:layout_marginRight="@dimen/_36sdp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/verifyButton"/>


    <TextView
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:text="Open"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/edit_background"
        android:backgroundTint="@color/accent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_36sdp"
        android:layout_marginRight="@dimen/_36sdp"
        app:layout_constraintTop_toBottomOf="@+id/mobileVerification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>